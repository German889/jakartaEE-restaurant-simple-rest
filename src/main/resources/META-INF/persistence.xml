<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
  <persistence-unit name="default">

  </persistence-unit>
  <persistence-unit name="Givermaen" transaction-type="JTA">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <jta-data-source>jdbc/giver</jta-data-source>
    <class>com.aston.second_task.entity.Courier</class>
    <class>com.aston.second_task.entity.Dish</class>
    <class>com.aston.second_task.entity.Restaurant</class>
    <class>com.aston.second_task.entity.Review</class>
    <class>com.aston.second_task.entity.User</class>
    <properties>
      <property name="eclipselink.target-database" value="PostgreSQL"/>
      <property name="eclipselink.logging.level" value="FINE"/>
      <property name="eclipselink.ddl-generation" value="create-tables"/>
    </properties>
  </persistence-unit>
  <persistence-unit name="test">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>com.aston.second_task.entity.Courier</class>
    <class>com.aston.second_task.entity.Dish</class>
    <class>com.aston.second_task.entity.Restaurant</class>
    <class>com.aston.second_task.entity.Review</class>
    <class>com.aston.second_task.entity.User</class>
    <properties>
      <property name="eclipselink.target-database" value="PostgreSQL"/>
      <property name="eclipselink.ddl-generation" value="create-tables"/>
      <property name="eclipselink.logging.level" value="FINE"/>
    </properties>
  </persistence-unit>
</persistence>
